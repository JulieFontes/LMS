<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.LMS.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="Welcome to &#10;A Canvas-like Application"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to dot net Multi platform App U I" />

            <Button
                Text="STUDENT" 
                SemanticProperties.Hint="Sends you to Student View"
                Clicked="StudentClicked"
                HorizontalOptions="Fill" />
            <Button
                Text="INSTRUCTOR"
                SemanticProperties.Hint="Sends you to Instructor View"
                Clicked="InstructorClicked" />
            <Button
                Text="EXIT"
                SemanticProperties.Hint="Quits Program"
                Clicked="ExitClicked"
                />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
