<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MAUI.LMS.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MAUI.LMS"
    xmlns:localview="clr-namespace:MAUI.LMS.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="MAUI.LMS">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Instructor"
        ContentTemplate="{DataTemplate localview:InstructorView}"
        Route="Instructor" />
    <ShellContent
        Title="Student"
        ContentTemplate="{DataTemplate localview:StudentView}"
        Route="Student" />

</Shell>
